{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Distribution of Fluoridation Levels Across Water Companies in Victoria",
  "width": 750,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/eddent2009/Edden_FIT3179_HW10/refs/heads/main/data/Fluoridation%20by%20postcode%20-%20Sheet1.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "Fluoride_Level_Selection",
      "bind": {
        "input": "select",
        "options": [
          "All",
          "Fluoridated",
          "Natural fluoride",
          "Not fluoridated",
          "Partly fluoridated"
        ],
        "name": "Filter by Fluoride Level: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Fluoride_Level_Selection == 'All' || Fluoride_Level_Selection == null || datum.fluoride_level == Fluoride_Level_Selection"
    },
    {
      "filter": "datum.water_company != 'Mount Buller and Mount Stirling ARMB' && datum.water_company != 'Mount Hotham ARMB'"
    }
  ],
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "water_company",
          "type": "nominal",
          "axis": {"title": "Water Company"}
        },
        "y": {
          "aggregate": "count",
          "field": "townsuburb",
          "type": "quantitative",
          "axis": {"title": "Number of Suburbs"}
        },
        "color": {
          "field": "fluoride_level",
          "type": "nominal",
          "scale": {
            "domain": [
              "Fluoridated",
              "Natural fluoride",
              "Not fluoridated",
              "Partly fluoridated"
            ],
            "range": ["#377eb8", "#008000", "#FF0000", "#ff7f00"]
          },
          "legend": {"title": "Fluoridation Level"}
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "dy": -10,
        "fontSize": 12,
        "fontStyle": "italic"
      },
      "encoding": {
        "x": {
          "field": "water_company",
          "type": "nominal"
        },
        "y": {
          "aggregate": "count",
          "field": "townsuburb",
          "type": "quantitative"
        },
        "text": {
          "aggregate": "count",
          "field": "townsuburb",
          "type": "quantitative"
        },
        "color": {"value": "black"}
      }
    }
  ]
}
