{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Fluoridation Levels by Suburb in Victoria with Ocean",
  "width": 750,
  "height": 500,
  "projection": {
    "type": "mercator",
    "center": [145, -37],
    "scale": {"expr": "zoom * 1000"}
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/eddent2009/Edden_FIT3179_DV2/refs/heads/main/js/ne_110m_ocean%20(1).json",
        "format": {"type": "json"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue", "stroke": "none"}  // Ocean layer
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/eddent2009/Edden_FIT3179_DV2/refs/heads/main/js/vic_localities.json",
        "format": {"type": "topojson", "feature": "vic_localities"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/eddent2009/Edden_FIT3179_DV2/refs/heads/main/js/ne_110m_graticules_1.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_1"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/eddent2009/Edden_FIT3179_DV2/refs/heads/main/data/Fluoridation%20by%20postcode%20-%20Sheet1.csv",
        "format": {"type": "csv"}
      },
      "mark": "circle",
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {"value": 50},
        "color": {
          "field": "fluoride_level",
          "type": "nominal",
          "scale": {
            "domain": [
              "Fluoridated",
              "Natural fluoride",
              "Not fluoridated",
              "Partly fluoridated"
            ],
            "range": ["#377eb8", "#008000", "#FF0000", "#ff7f00"]
          },
          "legend": {"title": "Fluoridation Level"}
        },
        "tooltip": [
          {"field": "townsuburb", "type": "nominal", "title": "Suburb"},
          {
            "field": "fluoride_level",
            "type": "nominal",
            "title": "Fluoridation Level"
          }
        ]
      }
    }
  ],
  "params": [
    {
      "name": "zoom",
      "value": 3.8,
      "bind": {"input": "range", "min": 1, "max": 50, "step": 0.1, "name": "Zoom level"}
    }
  ]
}
